

<div class="matrix-container">
  <hr />
  <div class="panel panel-default">

    <div class="panel-body">

      <%#= f.label "MC Question Body" %>
      <%= f.text_field :kind, value: "matrix", class: "hidden"%>
      <%= f.text_field :body, class: "form-control", placeholder: "Matrix Question Body Here" %>
      <%= f.text_field :matrix_headings, class: "form-control", placeholder: " Matrix Headers Seperated By Commas Here (e.g Very Dissatisfied, Dissatisfied, Netural, Satisfied, Very Satisfied )" %>

      <br />
      <%= link_to_add_association'+ Row', f, :options, partial: 'manager_surveys/options/matrix_option_fields', 'data-association-insertion-method' => 'append', class: "btn btn-default"
      %>


      <%= link_to_remove_association "Remove Question", f, wrapper_class: 'matrix-container', class: 'btn btn-default' %>
    </div>
  </div>
</div>
