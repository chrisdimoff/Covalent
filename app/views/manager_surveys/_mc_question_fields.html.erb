<div class="mc-container">
  <hr />
  <div class="panel panel-primary">

    <div class="panel-heading">
      <h3 class="panel-title">
        Multiple Choice
        <%= link_to_remove_association  f, wrapper_class: 'mc-container' do %>
          <i class="glyphicon glyphicon-trash upper-right-icon pull-right"      aria-hidden="true" >
          </i>
        <% end %>
      </h3>
    </div>
    <div class="panel-body">


      <%#= f.label "MC Question Body" %>
      <%= f.text_field :kind, value: "mc", class: "hidden"%>
      <%= f.text_field :body, class: "form-control", placeholder: "Multiple Choice Question Body Here" %>

      <br />
      <%= link_to_add_association'Add MC Response', f, :options, partial: 'manager_surveys/options/mc_option_fields',
      'data-association-insertion-method' => 'append', class: 'btn btn-default'
      %>


      <%= link_to_remove_association "Remove Question", f, wrapper_class: 'mc-container', class: 'btn btn-default' %>
    </div>
  </div>
</div>
