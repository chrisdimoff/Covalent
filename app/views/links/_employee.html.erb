<div class="modal-header">
   <!-- <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button> -->
   <legend id="myModalLabel">Employee Sign Up Link</legend>
 </div>
 <div class="modal-body">

   <div class="well">

       <p>
         Send this sign up link to the employees you want to participate in the study.
       </p>


       <div class="form-group">
         <input type="text" class="form-control" id="link-display" >
         <br />
         <button class="btn btn-primary" type="submit" id="copy">Copy to Clipboard</button>
       </div>

       <span style="display:none;"><%= link_to new_employee_url(company: @study.company, id: @study.id)%></span>

    </div>

   </div>
 <div class="modal-footer">
   <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
 </div>


<script>

    var link = $('span a').html()
    $('#link-display').val(link)

    $('#copy').click(function () {
      console.log('clicked')
      $('#link-display').select()
      document.execCommand('copy')
    })
    // document.querySelector("#visible-input").select();
    // // Copy to the clipboard
    // document.execCommand('copy');


</script>
