<div class="modal-header">
   <!-- <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button> -->
   <legend id="myModalLabel">Inactive Employees</legend>
 </div>
 <div class="modal-body widget-modal">

   <div class="well">


       <p>
         The following employees are inactive.
       </p>

       <table class="table table-condensed table-hover">
         <thead>
           <tr>
             <th>Id</th>
             <th>First Name</th>
             <th>Last Name</th>
             <th>E-Mail</th>
             <th>Sign Up Date</th>
           </tr>
         </thead>

         <tbody>
           <% @employees_with_no_entries.each do |emp| %>
           <tr>
             <td>
               <%= emp.id %>
             </td>
             <td>
               <%= emp.first_name %>
             </td>
             <td>
               <%= emp.last_name %>
             </td>
             <td>
               <%= emp.email %>
             </td>
             <td>
               <%= emp.created_at %>
             </td>
           </tr>
           <% end %>
         </tbody>
       </table>


    </div>

   </div>
 <div class="modal-footer">
   <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
 </div>
